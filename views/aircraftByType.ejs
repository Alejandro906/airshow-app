<style>
    .aircraftList {
        margin-top: 20px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
    }

    h1{
    font-size: 23px;
    }

    .searchItem {
        border: 1px solid lightgray;
        padding: 10px;
        border-radius: 5px;
        display: flex;
        justify-content: space-between;
        gap: 20px;
        margin-bottom: 20px;
    }

    .siImg {
        width: 200px;
        height: 200px;
        object-fit: cover;
    }

    .siDesc {
        display: flex;
        flex-direction: column;
        gap: 8px;
        flex: 2;
    }

    .siTitle {
        font-size: 20px;
        color: #0071c2;
    }

    .siDistance {
        font-size: 12px;
        background-color: #bfe2f7;
        color: black;
        width: max-content;
        padding: 3px;
        border-radius: 5px;
    }

    .siTaxiOp {
        font-size: 12px;
        background-color: #008009;
        color: white;
        width: max-content;
        padding: 3px;
        border-radius: 5px;
    }

    .siSubtitle{
        font-size: 12px;
        font-weight: bold;
    }

    .siFeatures{
        font-size: 12px;
    }

    .siCancelOp{
        font-size: 12px;
        color: #008009;
        font-weight: bold;
    }

    .siCancelOpSubtitle{
        font-size: 12px;
        color: #008009;
    }

    .siDetails {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between
    }

    .siRating{
        display: flex;
        justify-content: space-between
    }

    .siRating>span{
        font-weight: 500;
    }

    .btn1{
        background-color: #003580;
        color: white;
        padding: 5px;
        font-weight: bold;
        border: none;
    }

    .siDetailTexts{
        text-align: right;
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .siPrice{
        font-size: 24px;
    }

    .siTaxOp{
        font-size: 12px;
        color: gray;
    }

    .siCheckButton{
        background-color: #0071c2;
        color: white;
        font-weight: bold;
        padding: 7px 3px;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        font-size: 12px;
        transition: 0.3s all ease;
    }

    .siCheckButton:hover{
        background-color: #008009;
        color: white;
    }

    .manuBnt{
        background-color: #CC0000;
        color: white;
        padding: 5px;
        font-weight: bold;
        border: none;
    }
    .siTaxiOpH1{
        font-size: 28px;
        background-color: #bfe2f7;
        color: #002f5f;
        width: max-content;
        padding: 3px;
        border-radius: 5px;
        font-family: 'Arial', 'Helvetica', sans-serif;
    }
    .titleType{
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }
    .siTaxiOpwing{
        font-size: 12px;
        background-color: #febb02;
        color: #555;
        width: max-content;
        padding: 3px;
        border-radius: 5px;
    }
</style>

<%- include('partials/header') %>

<div class="titleType">
    <h1><span class="siTaxiOpH1"><%= getAircraftType %> aircraft</span></h1>
</div>
<div class="aircraftList">
    <div class="containerP">
        <% if (aircraftType.length > 0) { %>
            <% aircraftType.forEach((aircraft) => { %>
                <div class="searchItem">
                    <img src="<%= aircraft.photos[0] %>" alt="Aircraft Image" class="siImg" />

                    <div class="siDesc">
                        <h1 class="siTitle"><%= aircraft.name %></h1>
                        <span class="siDistance"><%= aircraft.range %> km range</span>
                        <span class="siSubtitle">
                            Aircraft Type <span class="siTaxiOp"><%= aircraft.type %></span>
                        </span>
                        <span class="siSubtitle">
                            Wingspan <span class="siTaxiOpwing"><%= aircraft.wingspan %></span>
                        </span>
                        <span class="siFeatures"><%= aircraft.desc %></span>
                        <span class="siCancelOp">Free pictures are available</span>
                        <span class="siCancelOpSubtitle">
                            You can sit in the cockpit, so lock in this great opportunity!
                        </span>
                    </div>

                    <div class="siDetails">
                        <% if (aircraft.manufacturer) { %>
                            <div class="siRating">
                                <button class="manuBnt">Manufacturer</button>
                                <button class="btn1"><%= aircraft.manufacturer %></button>
                            </div>
                        <% } %>

                        <div class="siDetailTexts">
                            <span class="siPrice">$<%= aircraft.price %> million</span>
                            <span class="siTaxOp">Includes food and drinks</span>
                            <a href="/aircraft/find/<%= aircraft._id %>">
                                <button class="siCheckButton">Read more</button>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>No aircraft found for this type.</p>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>
