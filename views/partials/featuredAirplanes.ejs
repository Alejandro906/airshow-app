<style>
  .fp {
    width: 100%;
    max-width: 1024px;
    display: flex;
    justify-content: space-between;
    gap: 20px;
  }

.fpItem{
  flex: 1;
  gap: 10px;
  display: flex;
  flex-direction: column;
}

.fpImg{
  width: 100%;
  height: 275px;
  object-fit: cover;
}

.fpName{
  color: #333;
  font-weight: bold;
}

.fpCity{
  font-weight: 300;
}

.fpPrice{
  font-weight: 500;
}

.fpRating>button{
  background-color: #008009;
  color: white;
  border: none;
  padding: 3px;
  margin-right: 10px;
  font-weight: bold;
  border-radius: 2px;
}

.fpRating>span{
  font-size: 14px;
  font-family: 'Arial', 'Helvetica', sans-serif;
}

.fpItem>span{
  font-size: 14px;
  font-family: 'Arial', 'Helvetica', sans-serif;
}
</style>

<div class="fp">
    <% featuredAircrafts.forEach(aircraft => { %>
      <div class="fpItem">
        <a href="/aircraft/find/<%= aircraft.id %>">
          <img src="<%= aircraft.photos[0] %>" alt="" class="fpImg" />
        </a>
        <span><%= aircraft.name %></span>
        <span class="fpName"><%= aircraft.yearOfProduction %></span>
        <% if (aircraft.range) { %>
          <div class="fpRating">
            <button><%= aircraft.range %></button>
            <span>Kilometers</span>
          </div>
        <% } %>
      </div>
    <% }) %>
  </div>
  